        <td><%= link_to 'Delete', chesttriceps3, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary", style: "color: #01a6ee" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

