<header>
  <%= render 'devise/registrations/profileheader' %>
</header>

<br> <br> <br> <br>
<div class= "container">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="card">
    <h5 class="card-header">Personal Records</h5>
    <div class="card-body">

      <div class="field form-group">
      <%= f.label :benchpressPR, "Bench Press" %><br />
      <%= f.text_field :benchpressPR, autofocus: true %>
    </div>

    <div class="field form-group">
      <%= f.label :squatPR , "Squat"%><br />
      <%= f.text_field :squatPR, autofocus: true %>
    </div>

  <div class="field form-group">
      <%= f.label :deadliftPR, "Deadlift" %><br />
      <%= f.text_field :deadliftPR, autofocus: true %>
    </div>


  <div class="actions">
         <%= f.submit "Update", class: 'btn btn-primary' %>
        </div>

  </div>
</div>

<br>


  <div class="card">
    <h5 class="card-header">Profile</h5>
    <div class="card-body">



      

        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field form-group">
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
          <!--<%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br /> -->
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"New Password" %>
          
        </div>

        <div class="field form-group">
          <!-- <%= f.label :password_confirmation %><br /> -->
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirm New Password" %>
        </div>

        <!--<div class="field form-group">
           <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password",  class:"form-control", placeholder:"Current Password"%>
        </div>
      -->

      <br>
        <div class="actions">
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
  
</div>





<br> <br> 
<div class= "container">

  <div class="card">
    <h5 class="card-header">Cancel Account</h5>
    <div class="card-body">

      <p>Not making any gains? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

      <%= link_to "Back", :back %>        

    
    </div>
  </div>
  
</div>
