        <td style="color: #01a6ee;" ><%= chest_triceps1.sets %></td>
        <!-- <td><%= link_to 'Show', chest_triceps1 %></td>  -->
        <td style="color: #01a6ee;"><%= link_to 'Edit', edit_chest_triceps1_path(chest_triceps1), class: "btn btn-secondary", style: "color: #01a6ee" %></td>
        <td style="color: #01a6ee;"><%= link_to 'Delete', chest_triceps1, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary", style: "color: #01a6ee" %>
            </td>
      </tr>
    <% end %>
  </tbody>
</table>

