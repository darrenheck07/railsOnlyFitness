<header>
  <%= render 'home/header' %>
</header>

<p id="notice"><%= notice %></p>

<div class = "container"> 

<div class = "row justify-content-center">
  <h1>Chest/Triceps 1</h1>
</div>

<table class = "table table-hover table-dark">
  <thead class = "thead-light">
    <tr>
      <th>Exercise</th>
      <th>Reps</th>
      <th>Sets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chest_triceps1s.each do |chest_triceps1| %>
      <tr>
